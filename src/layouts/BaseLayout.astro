      "makesOffer": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Room",
            "name": "Deluxe Room",
            "description": "Spacious air-conditioned room with Wi-Fi, TV, and private balcony.",
            "bed": "Queen",
            "occupancy": { "@type": "QuantitativeValue", "value": 2 }
          },
          "priceCurrency": "INR",
          "price": "3500",
          "availability": "https://schema.org/InStock"
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Room",
            "name": "Premium Room",
            "description": "Elegant premium room featuring all deluxe amenities plus a mini fridge for extra comfort.",
            "bed": "King",
            "occupancy": { "@type": "QuantitativeValue", "value": 2 }
          },
          "priceCurrency": "INR",
          "price": "4500",
          "availability": "https://schema.org/InStock"
        }
      ]
    },
    {
      "@type": "Resort",
      "name": "Tanvi Premium Resort",
      "image": "https://tanvipremiumgroup.com/Resort/Resort(1).png",
      "description": "Resort in Aravali Hills, Gurugram — perfect for weekend getaways, events, and family stays with pool, cafe, and banquet hall.",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Garat Pur Bas",
        "addressLocality": "Gurugram",
        "addressRegion": "Haryana",
        "postalCode": "122001",
        "addressCountry": "IN"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "28.3400722",
        "longitude": "76.9951417"
      },
      "telephone": "+919821841113",
      "priceRange": "₹3500 - ₹8000 per night",
      "checkinTime": "14:00",
      "checkoutTime": "11:00",
      "amenityFeature": [
        { "@type": "LocationFeatureSpecification", "name": "Swimming Pool", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Banquet Hall", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Cafe", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Parking", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Free Wi-Fi", "value": true }
      ]
    }
  ],
  "sameAs": [
    "https://www.facebook.com/tanvipremiumgroup",
    "https://www.instagram.com/tanvipremiumgroup"
  ]
};
---

<html lang="en">
  <head>
    <!-- ✅ Place this script tag just after opening <head> -->
    <script type="application/ld+json">{JSON.stringify(schema)}</script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/Logo.png" />
    <link rel="apple-touch-icon" href="/Logo.png" />

    <meta property="og:title" content="Tanvi Premium Hotels & Resort" />
    <meta property="og:image" content="/aboutBG.png" />
    <meta property="og:url" content="https://tanvipremiumgroup.com/" />
    <meta property="og:type" content="website" />

    <meta name="author" content="Tanvi Premium Group" />
    <meta name="email" content="tanvipremiumgroup@gmail.com" />
    <meta name="telephone" content="+91 9821841113" />

    <link rel="canonical" href="https://tanvipremiumgroup.com/" />
    {headContent}
  </head>

  <body class="bg-white text-gray-900">
    <header class="sticky top-0 z-50"><Navbar /></header>
    <main id="page" class="flex-1 min-h-screen">
      <slot />
    </main>
    <WhatsAppBubble client:only="react" />
    <Footer />
  </body>
</html>
