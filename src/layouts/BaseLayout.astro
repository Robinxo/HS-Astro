  "url": "https://tanvipremiumgroup.com",
  "telephone": "+919821841113",
  "description": "Discover Tanvi Premium Hotels & Resort in Gurugram. Premium & deluxe rooms, resort in Aravali Hills with pool & cafe, plus banquet hall for events.",
  "logo": "https://tanvipremiumgroup.com/Logo.png",
  "department": [
    {
      "@type": "Hotel",
      "name": "Tanvi Premium Hotel",
      "image": "https://tanvipremiumgroup.com/Rooms/Premium/Premium(1).png",
      "description": "Premium hotel in Gurugram offering deluxe and premium rooms with modern amenities, located in Sector 45.",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Plot No 38, Block C, Uday Nagar, Sector 45",
        "addressLocality": "Gurugram",
        "addressRegion": "Haryana",
        "postalCode": "122001",
        "addressCountry": "IN"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "28.4352871",
        "longitude": "77.0731182"
      },
      "telephone": "+919821841113",
      "priceRange": "₹3500 - ₹8000 per night",
      "checkinTime": "14:00",
      "checkoutTime": "11:00",
      "amenityFeature": [
        { "@type": "LocationFeatureSpecification", "name": "Free Wi-Fi", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Air Conditioning", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Television", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Balcony", "value": true }
