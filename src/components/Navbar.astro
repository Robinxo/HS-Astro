---

<nav
  class="bg-[#8b7355] text-white flex items-center justify-between px-4 sm:px-6 md:px-10 py-4 relative"
>
  <!-- Logo and Brand -->
  <div class="flex items-center space-x-3">
    <img
      src="/Logo.png"
      alt="Tanvi Group Logo"
      class="w-14 h-14 sm:w-20 sm:h-20 object-contain"
    />
    <a
      href="/"
      class="font-ken text-2xl sm:text-4xl md:text-5xl text-[#212842]"
    >
      TANVI GROUP
    </a>
  </div>

  <!-- Desktop Menu -->
  <div class="hidden md:flex space-x-8 text-lg font-semibold">
    <a href="/" class="text-[#212842] py-3 hover:text-white">HOME</a>
    <a href="/aboutus" class="text-[#212842] py-3 hover:text-white">ABOUT US</a>
    <a href="/contacts" class="text-[#212842] py-3 hover:text-white">CONTACT</a>
    <a
      href="tel:+919821841112"
      aria-label="Chat on WhatsApp"
      class="bg-[#d2b48c] text-[#0B1A33] font-bold px-6 py-3 rounded-full shadow-lg hover:bg-white transition text-center"
    >
      +919821841112
    </a>
  </div>

  <!-- Mobile Menu Button -->
  <button
    id="menu-toggle"
    class="md:hidden text-[#212842] focus:outline-none"
    aria-label="Toggle menu"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-8 w-8"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        id="menu-icon"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>

  <!-- Mobile Dropdown Menu -->
  <div
    id="mobile-menu"
    class="hidden absolute top-16 left-0 w-full bg-[#8b7355] flex flex-col items-center space-y-4 py-6 md:hidden z-50 px-5"
  >
    <a href="/" class="text-[#212842] hover:text-white text-lg font-semibold"
      >HOME</a
    >
    <a
      href="/aboutus"
      class="text-[#212842] hover:text-white text-lg font-semibold">ABOUT US</a
    >
    <a
      href="/contacts"
      class="text-[#212842] hover:text-white text-lg font-semibold">CONTACT</a
    >
    <a
      href="tel:+919821841112"
      class="text-[#212842] hover:text-white text-lg font-semibold"
      >+91 9821841112</a
    >
  </div>
</nav>

<script>
  const toggleBtn = document.querySelector("#menu-toggle");
  const mobileMenu = document.querySelector("#mobile-menu");
  const menuIcon = document.querySelector("#menu-icon");

  toggleBtn?.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");

    // Toggle between hamburger and close icon
    if (mobileMenu.classList.contains("hidden")) {
      menuIcon.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
    } else {
      menuIcon.setAttribute("d", "M6 18L18 6M6 6l12 12");
    }
  });
</script>
