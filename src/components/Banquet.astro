---
import { Phone } from "@lucide/astro";

import { Swiper, SwiperWrapper, SwiperSlide } from "astro-swiper";

const BanquetImages = [
  {
    src: "/Banquet/Banquet(1).png",
    alt: "Garden Resort",
  },
  {
    src: "/Banquet/Banquet(2).png",
    alt: "Garden Resort",
  },
  {
    src: "/Banquet/Banquet(3).png",
    alt: "Garden Resort",
  },
  {
    src: "/Banquet/Banquet(4).png",
    alt: "Garden Resort",
  },
  {
    src: "/Banquet/Banquet(5).png",
    alt: "Garden Resort",
  },
];
---

<section
  class="py-12 px-6 text-white min-h-screen"
  style="background-image: url('/bgcontact.png'); background-size: cover; background-position: center;"
>
  <div
    class="max-w-4xl mx-auto bg-gradient-to-r bg-[#d2b48c] text-[#0B1A33] rounded-2xl shadow-xl p-8"
  >
    <h3 class="text-2xl font-bold mb-4">Plan Your Event With Us</h3>

    <Swiper
      options={{
        autoplay: { delay: 2000, disableOnInteraction: false },
        loop: true,
      }}
    >
      <SwiperWrapper>
        {
          BanquetImages.map((image) => (
            <SwiperSlide>
              <img
                src={image.src}
                alt={image.alt}
                loading="lazy"
                class="w-full h-full object-cover"
                onClick={`openImage('${image.src}')`}
              />
            </SwiperSlide>
          ))
        }
      </SwiperWrapper>
    </Swiper>

    <p class="mb-6 mt-6">
      Our elegant event space can host 75 to 100 guests, ideal for corporate
      meetings, conferences, intimate weddings, and private parties. Equipped
      with modern facilities and supported by professional service, we make
      every occasion memorable.
    </p>

    <div class="flex flex-col sm:flex-row gap-6">
      <a
        href="https://wa.me/+919821841112"
        class="flex items-center justify-center gap-2 bg-yellow-400 text-[#0B1A33] px-6 py-3 rounded-lg font-bold shadow hover:bg-yellow-300 transition"
      >
        Book now
      </a>

      <a
        href="tel:+919821841112"
        class="flex items-center justify-center gap-2 bg-yellow-400 text-[#0B1A33] px-6 py-3 rounded-lg font-bold shadow hover:bg-yellow-300 transition"
      >
        <Phone class="w-5 h-5" />
        Call Us
      </a>
    </div>
  </div>
</section>

<script is:inline>
  if (typeof window !== "undefined") {
    window.openImage = (src) => {
      const overlay = document.createElement("div");
      overlay.className =
        "fixed inset-0 bg-black/80 flex items-center justify-center z-[9999] backdrop-blur-sm cursor-zoom-out animate-fadeIn";

      const img = document.createElement("img");
      img.src = src;
      img.className =
        "max-w-[90%] max-h-[90%] rounded-2xl shadow-2xl transform scale-95 opacity-0 transition-all duration-300 ease-out";

      overlay.appendChild(img);
      document.body.appendChild(overlay);

      requestAnimationFrame(() => {
        img.classList.remove("scale-95", "opacity-0");
        img.classList.add("scale-100", "opacity-100");
      });

      overlay.addEventListener("click", () => {
        img.classList.add("scale-95", "opacity-0");
        setTimeout(() => overlay.remove(), 200);
      });
    };
  }
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
  }
</style>
