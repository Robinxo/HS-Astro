---
import { Swiper, SwiperWrapper, SwiperSlide } from "astro-swiper";

const Deluxeimages = [
  { src: "/Rooms/Deluxe/Deluxe(1).png", alt: "Deluxe Room" },
  { src: "/Rooms/Deluxe/Deluxe(2).png", alt: "Deluxe Room" },
  { src: "/Rooms/Deluxe/Deluxe(3).png", alt: "Deluxe Room" },
];

const Premiumimages = [
  { src: "/Rooms/Premium/Premium(1).png", alt: "Premium Room" },
  { src: "/Rooms/Premium/Premium(2).png", alt: "Premium Room" },
  { src: "/Rooms/Premium/Premium(3).png", alt: "Premium Room" },
];
---

<section
  class="py-12 px-6 text-white min-h-screen space-y-10"
  style="
    background-image: url('/aboutBG.png');
    background-size: cover;
    background-position: center;
  "
>
  <div class="max-w-5xl mx-auto space-y-10">
    <!-- Deluxe Room -->
    <div
      class="flex flex-col md:flex-row bg-[#d2b48c] text-[#0B1A33] rounded-2xl shadow-xl overflow-hidden"
    >
      <div class="md:w-1/2">
        <Swiper
          options={{
            autoplay: { delay: 2000, disableOnInteraction: false },
            loop: true,
          }}
        >
          <SwiperWrapper>
            {
              Deluxeimages.map((image) => (
                <SwiperSlide>
                  <img
                    src={image.src}
                    alt={image.alt}
                    loading="lazy"
                    class="w-full h-80 object-cover"
                    onClick={`openImage('${image.src}')`}
                  />
                </SwiperSlide>
              ))
            }
          </SwiperWrapper>
        </Swiper>
      </div>

      <div class="flex-1 p-6 flex flex-col justify-between">
        <div>
          <h3 class="text-2xl font-bold mb-3">Deluxe Rooms</h3>
          <p class="font-semibold mb-2">Amenities</p>
          <ul class="list-disc pl-6 space-y-1">
            <li>Designed for comfort and convenience</li>
            <li>Modern interiors with essential amenities</li>
            <li>Perfect for short stays or business travelers</li>
            <li>Includes complimentary breakfast & dinner</li>
            <li>Cozy, affordable, and comfortable stay</li>
          </ul>
        </div>
        <div class="flex justify-end mt-6">
          <a
            href="https://wa.me/+919821841112"
            class="bg-yellow-400 text-[#0B1A33] px-5 py-2 rounded-full font-bold hover:bg-yellow-300 shadow"
          >
            Book now
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Premium Room -->

  <div class="max-w-5xl mx-auto space-y-10">
    <div
      class="flex flex-col md:flex-row bg-gradient-to-r bg-[#d2b48c] text-[#0B1A33] rounded-2xl shadow-xl overflow-hidden"
    >
      <div class="flex-1 p-6 flex flex-col justify-between">
        <div>
          <h3 class="text-2xl font-bold mb-3 flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 text-[#212842 ]"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 2l3 7h7l-5.5 4.5L18 22l-6-4-6 4 1.5-8.5L2 9h7z"></path>
            </svg>
            Premium Rooms
          </h3>
          <p class="font-semibold mb-2">Ultimate Experience</p>
          <ul class="list-disc pl-6 space-y-1">
            <li>Spacious layout with elegant d√©cor</li>
            <li>Upgraded furnishings & premium bedding</li>
            <li>Extra seating/workspace for business use</li>
            <li>Enhanced in-room facilities (mini-bar / TV etc.)</li>
            <li>Includes complimentary breakfast & dinner</li>
          </ul>
        </div>
        <div class="flex justify-end mt-6">
          <a
            href="https://wa.me/+919821841112"
            class="bg-yellow-400 text-[#0B1A33] px-5 py-2 rounded-full font-bold hover:bg-yellow-300 shadow"
          >
            Book now
          </a>
        </div>
      </div>

      <div class="md:w-1/2">
        <Swiper
          options={{
            autoplay: { delay: 2000, disableOnInteraction: false },
            loop: true,
          }}
        >
          <SwiperWrapper>
            {
              Premiumimages.map((image) => (
                <SwiperSlide>
                  <img
                    src={image.src}
                    alt={image.alt}
                    loading="lazy"
                    class="w-full h-80 object-cover"
                    onClick={`openImage('${image.src}')`}
                  />
                </SwiperSlide>
              ))
            }
          </SwiperWrapper>
        </Swiper>
      </div>
    </div>
    <div class="mt-12 max-w-5xl mx-auto">
      <h3 class="text-3xl font-bold mb-4 text-yellow-400 text-center">
        Our Location
      </h3>
      <div class="w-full h-96 rounded-2xl overflow-hidden shadow-lg">
        <iframe
          title="Hotel Location"
          src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14033.874421635268!2d77.07311826989748!3d28.43528712191929!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390d19b05ea6c083%3A0x9c0f6cbd1a0b53!2sCollection%20O%20Tanvi%20Premium%20Residency!5e0!3m2!1sen!2sin!4v1759665868318!5m2!1sen!2sin"
          width="100%"
          height="100%"
          class="border-0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  if (typeof window !== "undefined") {
    window.openImage = (src) => {
      const overlay = document.createElement("div");
      overlay.className =
        "fixed inset-0 bg-black/80 flex items-center justify-center z-[9999] backdrop-blur-sm cursor-zoom-out animate-fadeIn";

      const img = document.createElement("img");
      img.src = src;
      img.className =
        "max-w-[90%] max-h-[90%] rounded-2xl shadow-2xl transform scale-95 opacity-0 transition-all duration-300 ease-out";

      overlay.appendChild(img);
      document.body.appendChild(overlay);

      requestAnimationFrame(() => {
        img.classList.remove("scale-95", "opacity-0");
        img.classList.add("scale-100", "opacity-100");
      });

      overlay.addEventListener("click", () => {
        img.classList.add("scale-95", "opacity-0");
        setTimeout(() => overlay.remove(), 200);
      });
    };
  }
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
  }
</style>
